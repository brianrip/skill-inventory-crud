<h1 class="text-center"><u>Mad Skilz</u></h1>

<% @skills.each do |skill| %>
  <h3><%= skill.id %>: <a href="/skills/<%= skill.id %>"><%= skill.title %></a></h3>
    <a href="/skills/<%= skill.id %>/edit">Edit</a>

    <form action="/skills/<%= skill.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete">
    </form>

<% end %>
<br>
<a href="/skills/new">New Skill</a>
